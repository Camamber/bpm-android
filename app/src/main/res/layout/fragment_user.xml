<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:textAlignment="center"
        android:text="Summary"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorPrimaryTextDark"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/et_arterial"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_summary"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:textAlignment="center"
        android:text="Avg. arterial 123"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorPrimaryTextDark"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/et_venous"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_summary"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/et_arterial"
        android:ems="10"
        android:textAlignment="center"
        android:text="Avg. venous 65"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorPrimaryTextDark"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/et_pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_arterial"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:text="Avg. pulse 74 b/s"
        android:textColor="@color/colorPrimaryText"
        android:textColorHint="@color/colorPrimaryTextDark"
        android:textSize="12pt" />
</RelativeLayout>